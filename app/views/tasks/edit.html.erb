<h1>Edit task</h1>
<%= form_for @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <div class="checkbox">
    <%= f.check_box :completed %>
    <%= f.label :completed, class: "label-completed"%>
  </div>
    <%= f.submit "Update task", class: "btn" %>
<% end %>

<%= link_to "Back to list", tasks_path %>