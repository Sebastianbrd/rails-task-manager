<div class="container">
  <div class="top">
    <h1><%= @task.title %></h1>
    <%= link_to "Edit task", edit_task_path %>
  </div>
  <div class="description">
    <p><%= @task.details %></p>
  </div>
  <div class="completion">
    <p><%= check_box_tag 'completed', '1', @task.completed %>
      <% if @task.completed == true %>
        <%= 'This task is completed' %>
      <% else %>
        <%= 'This task is not completed yet' %>
      <% end %>
    </p>
  </div>
  <%= link_to "Back to list", tasks_path %>
</div>